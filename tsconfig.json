{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts"]
}
